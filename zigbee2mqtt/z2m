#!/usr/bin/env python3
from __future__ import annotations

import os
import sys
from pathlib import Path


def _maybe_reexec_venv_python() -> None:
    here = Path(__file__).resolve().parent
    venv_dir = here / ".venv"
    venv_python = venv_dir / "bin" / "python"
    if not venv_python.exists():
        return

    if Path(sys.prefix).resolve() == venv_dir.resolve():
        return

    os.execv(str(venv_python), [str(venv_python), *sys.argv])


def _ensure_local_imports() -> None:
    # Allow running from anywhere without installing the package.
    # Adds the folder containing this script (zigbee2mqtt/) to sys.path.
    here = Path(__file__).resolve().parent
    sys.path.insert(0, str(here))


def main() -> None:
    _maybe_reexec_venv_python()
    _ensure_local_imports()
    from z2m_tools.main import main as _main  # noqa: WPS433 (local import by design)

    _main()


if __name__ == "__main__":
    main()
